<?xml version="1.0" encoding="UTF-8"?>
<?xml-model 
    href="https://gitlab.gnome.org/GNOME/gtk/-/raw/main/tools/gtk4builder.rng?ref_type=heads" 
    schematypens="http://relaxng.org/ns/structure/1.0"?>
<interface>
    <template class="TsLauncherWindow" parent="AdwApplicationWindow">
        <property name="title">Tiny Launcher</property>
        <property name="default-width">464</property>
        <property name="default-height">464</property>
        <property name="content">
            <object class="AdwToolbarView">
                <property name="width-request">400</property>
                <property name="height-request">400</property>
                <property name="valign">GTK_ALIGN_CENTER</property>
                <property name="halign">GTK_ALIGN_CENTER</property>
                <style>
                    <class name="ts-main" />
                </style>
                <child type="top">
                    <object class="GtkBox">
                        <style>
                            <class name="ts-header" />
                        </style>
                        <child>
                            <object class="GtkSearchEntry" id="search_entry">
                                <property name="valign">GTK_ALIGN_CENTER</property>
                                <signal
                                    name="search-changed"
                                    handler="onSearchChanged"
                                    swapped="true"
                                />
                                <property name="placeholder-text">Buscar...</property>
                                <property name="activates-default">true</property>
                                <property name="hexpand">true</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkButton">
                                <property name="valign">GTK_ALIGN_CENTER</property>
                                <child>
                                    <object class="GtkImage">
                                        <property name="icon-name">view-more</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
                <property name="content">
                    <object class="GtkBox">
                        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                        <child>
                            <object class="GtkScrolledWindow">
                                <property name="vexpand">true</property>
                                <child>
                                    <object class="GtkListBox" id="list_box">
                                        <property name="selection-mode">GTK_SELECTION_BROWSE</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </property>
            </object>
        </property>
        <child>
            <object class="GtkEventControllerKey">
                <signal name="key-pressed" handler="onKeyPressed" swapped="true" />
            </object>
        </child>
    </template>
</interface>
